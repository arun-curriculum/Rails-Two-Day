<div class="container">
	<h1>Book Manager</h1>

	<div>
		<a href="#" class="btn btn-primary" data-target="#add-book-modal" data-toggle="modal">Add Book</a>
	</div>
</div>

<div class="container margin-top-20">
	<table class="table striped">
		<thead>
			<th>Title</th>
			<th>Author</th>
			<th>Genre</th>
			<th>Pages</th>
			<th>Action</th>
		</thead>

		<tbody>
			<% @books.each do |book| %>
				<tr>
					<td>
						<%= book.title %>
					</td>
					<td>
						<%= book.author %>
					</td>
					<td>
						<%= book.genre %>
					</td>
					<td>
						<%= book.pages %>
					</td>
					<td>
						<a href="/edit/<%= book.id %>" class="btn btn-primary">Edit</a>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>

<div id="add-book-modal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				<h4 class="modal-title">Add a Book</h4>
			</div>
			<%= form_tag("/addbook") do %>
				<div class="modal-body">
					<div class="bold">
						Title
					</div>
					<div class="margin-top-20">
						<input name="title" type="text" class="form-control" placeholder="Title" />
					</div>
					<div class="bold margin-top-20">
						Author
					</div>
					<div class="margin-top-20">
						<input name="author" type="text" class="form-control" placeholder="Author" />
					</div>
					<div class="bold margin-top-20">
						Genre
					</div>
					<div class="margin-top-20">
						<input name="genre" type="text" class="form-control" placeholder="Genre" />
					</div>
					<div class="bold margin-top-20">
						Pages
					</div>
					<div class="margin-top-20">
						<input name="pages" type="text" class="form-control" placeholder="Pages" />
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					<button type="submit" class="btn btn-primary">Save Book</button>
				</div>
			<% end %>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->