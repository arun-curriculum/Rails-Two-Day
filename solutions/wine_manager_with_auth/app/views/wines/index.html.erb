<div class="container">
	<% if session[:user_id] %>
		<div class="margin-top-20">
			<a href="/logout" class="btn btn-warning">Logout</a>
		</div>
	<% end %>
</div>
<div class="container">
	<div class="margin-top-20">
		<a href="#" data-toggle="modal" data-target="#add-wine-modal" class="btn btn-primary">Add New Wine</a>
	</div>
	<% @wines.each do |wine| %>
		<!--One Wine-->
		<div class="row margin-top-20 wine-container">
			<div class="col-sm-3">
				<img src="<%= wine['picture'] %>" class="img-responsive" />
			</div>
			<div class="col-sm-9">
				<div class="margin-top-20">
					<span class="bold">Name: </span><span><%= wine["name"] %></span>
				</div>
				<div>
					<span class="bold">Year: </span><span><%= wine["year"] %></span>
				</div>
				<div>
					<span class="bold">Grapes: </span><span><%= wine["grapes"] %></span>
				</div>
				<div>
					<span class="bold">Country: </span><span><%= wine["country"] %></span>
				</div>
				<div>
					<span class="bold">Region: </span><span><%= wine["region"] %></span>
				</div>
				<div>
					<span class="bold">Price: </span><span><%= wine["price"] %></span>
				</div>
				<div>
					<span class="bold">Description: </span>
				</div>
				<div class="margin-top-10">
					<%= wine["description"] %>
				</div>
				<div class="margin-top-20">
					<a href="/edit/<%= wine['id'] %>" class="btn btn-default">Edit Wine</a>
				</div>
			</div>
		</div>
		<!--/One Wine-->
	<% end %>
</div>

<!--Add Wine Modal-->
<div id="add-wine-modal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">Add New Wine</h4>
			</div>
			<%= form_tag("/addwine") do %>
			<div class="modal-body">
				<div class="bold">
					Name
				</div>
				<div class="margin-top-20">
					<input name="name" type="text" class="form-control" />
				</div>
				<div class="bold margin-top-20">
					Year
				</div>
				<div class="margin-top-20">
					<input name="year" type="text" class="form-control" />
				</div>
				<div class="bold margin-top-20">
					Grapes
				</div>
				<div class="margin-top-20">
					<input name="grapes" type="text" class="form-control" />
				</div>
				<div class="bold margin-top-20">
					Country
				</div>
				<div class="margin-top-20">
					<input name="country" type="text" class="form-control" />
				</div>
				<div class="bold margin-top-20">
					Region
				</div>
				<div class="margin-top-20">
					<input name="region" type="text" class="form-control" />
				</div>
				<div class="bold margin-top-20">
					Price
				</div>
				<div class="margin-top-20">
					<input name="price" type="text" class="form-control" />
				</div>
				<div class="bold margin-top-20">
					Picture
				</div>
				<div class="margin-top-20">
					<input name="picture" type="text" class="form-control" />
				</div>
				<div class="bold margin-top-20">
					Description
				</div>
				<div class="margin-top-20">
					<textarea name="description" class="form-control"></textarea>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<button type="submit" class="btn btn-primary">Save Wine</button>
			</div>
			<% end %>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!--/Add Wine Modal-->